<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HistorialActivity">

    <TextView
            android:text="@string/historial"
            android:layout_width="88dp"
            android:layout_height="35dp"
            android:id="@+id/textView2" android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodHistorial" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:hint="@string/codHistorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtFechaHistorial" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodHistorial"
            app:layout_constraintEnd_toEndOf="@+id/txtCodHistorial"
            app:layout_constraintStart_toStartOf="@+id/txtCodHistorial" android:hint="@string/fechaHistorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtObservaciones" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtFechaHistorial"
            app:layout_constraintEnd_toEndOf="@+id/txtFechaHistorial"
            app:layout_constraintStart_toStartOf="@+id/txtFechaHistorial" android:hint="@string/observacionHistorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/txtUsuario" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtObservaciones"
            app:layout_constraintEnd_toEndOf="@+id/txtObservaciones" app:layout_constraintStart_toStartOf="@+id/txtObservaciones"
            android:visibility="invisible"/>
    <Button
            android:text="@string/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcepHis" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtUsuario" app:layout_constraintEnd_toEndOf="@+id/txtUsuario"
            app:layout_constraintStart_toStartOf="@+id/txtUsuario"/>
</android.support.constraint.ConstraintLayout>