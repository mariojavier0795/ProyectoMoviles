<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TratamientoActivity">

    <TextView
            android:text="@string/tratamiento"
            android:layout_width="140dp"
            android:layout_height="53dp"
            android:id="@+id/textView4" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodTra"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.493" android:hint="@string/codHistorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodTra"
            app:layout_constraintEnd_toEndOf="@+id/txtCodTra" app:layout_constraintStart_toStartOf="@+id/txtCodTra"
            android:hint="@string/usoTratamiento"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtObsTra" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4"
            app:layout_constraintEnd_toEndOf="@+id/editText4" app:layout_constraintStart_toStartOf="@+id/editText4"
            android:hint="@string/observacionHistorial"/>
    <Button
            android:text="@string/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcepTra" app:layout_constraintStart_toStartOf="@+id/txtObsTra"
            app:layout_constraintEnd_toEndOf="@+id/txtObsTra" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/txtObsTra" app:layout_constraintHorizontal_bias="0.496"/>
</android.support.constraint.ConstraintLayout>