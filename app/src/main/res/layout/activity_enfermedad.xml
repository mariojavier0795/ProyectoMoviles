<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EnfermedadActivity">

    <TextView
            android:text="@string/enfermedad"
            android:layout_width="111dp"
            android:layout_height="45dp"
            android:id="@+id/textView3" android:layout_marginTop="92dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp" android:textAlignment="center"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCodEnf" android:layout_marginTop="84dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView3"
            android:hint="@string/codHistorial"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNomEnf" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCodEnf"
            app:layout_constraintEnd_toEndOf="@+id/txtCodEnf" app:layout_constraintStart_toStartOf="@+id/txtCodEnf"
            app:layout_constraintHorizontal_bias="0.0" android:hint="@string/nombre"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtObEnf" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNomEnf"
            app:layout_constraintEnd_toEndOf="@+id/txtNomEnf" app:layout_constraintStart_toStartOf="@+id/txtNomEnf"
            android:hint="@string/observacionHistorial"/>
    <Button
            android:text="@string/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAcepEnf" app:layout_constraintStart_toStartOf="@+id/txtObEnf"
            app:layout_constraintEnd_toEndOf="@+id/txtObEnf" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txtObEnf" app:layout_constraintHorizontal_bias="0.496"/>
</android.support.constraint.ConstraintLayout>